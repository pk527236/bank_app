<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bank2" />

    <Button
        android:id="@+id/btnBalance"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#60CFB4"
        android:text="Check Balance"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btnTransfer"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#60CFB4"
        android:text="Transfer"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDeposit" />

    <Button
        android:id="@+id/btnWithdraw"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#60CFB4"
        android:text="Withdraw"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBalance" />

    <Button
        android:id="@+id/btnDeposit"
        android:layout_width="378dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#60CFB4"
        android:text="Deposit"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWithdraw" />

</androidx.constraintlayout.widget.ConstraintLayout>